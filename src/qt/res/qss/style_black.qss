QLabel {
  color: white;
}

QFrame {
  border: none;
}

QDateEdit {
  border: none;
  color: white;
  height: 24px;
  border-bottom: 2px solid #3cb0e5;
  padding: 3px 5px;
  background: transparent;
  outline: none;
  padding-right: 20px;
}

QDateEdit::drop-down {
  image: url(:/icons/material/white/arrow_down);
  subcontrol-origin: margin;
  subcontrol-position: right center;
  width: 15px;
  height: 15px;
  border: none;
}

QThemedPanel QToolButton { width: 14px; height: 14px; border-width: 2px; padding-top: 0; padding-bottom: 0; }
QThemedPanel QToolButton:pressed { border-top-width: 3px; border-bottom-width: 1px; }

QThemedPanel #pasteButton, #pasteButton_SM { border-image: url(:/icons/material/white/paste) 0 stretch stretch; }
QThemedPanel #pasteButton:hover, #pasteButton_SM:hover { border-image: url(:/icons/material/blue/paste) 0 stretch stretch; }

QThemedPanel #addressBookButton, #addressBookButton_SM, #addressBookButton_VM { border-image: url(:/icons/material/white/people) 0 stretch stretch; }
QThemedPanel #addressBookButton:hover, #addressBookButton_SM:hover, #addressBookButton_VM:hover { border-image: url(:/icons/material/blue/people) 0 stretch stretch; }

QThemedPanel #deleteButton { border-image: url(:/icons/material/white/close) 0 stretch stretch; }
QThemedPanel #deleteButton:hover:enabled { border-image: url(:/icons/material/blue/close) 0 stretch stretch; }

QThemedPanel #copySignatureButton_SM { border-image: url(:/icons/material/white/copy) 0 stretch stretch; }
QThemedPanel #copySignatureButton_SM:hover { border-image: url(:/icons/material/blue/copy) 0 stretch stretch; }

QCustomButton {
  font-family: 'Montserrat';
  text-transform: uppercase;
  font-size: 10px;
  height: 25px;
  color: white;
  border: none;
  outline: none;
  margin: 0;
  padding: 5px 15px;
  background-color: black;
}

QCustomButton:hover {
  background-color: #3cb0e5;
  color: white;
}

QCustomButton:disabled {
  color: gray;
}

QCustomButton:pressed {
  padding: 6px 15px 4px 15px;
}

#confirmButton, #signConfirmButton, #verifyConfirmButton, #saveButton {
  background-color: #8BC34A;
  color: white;
}

#confirmButton:hover, #signConfirmButton:hover, #verifyConfirmButton:hover, #saveButton:hover {
  background-color: #3cb0e5;
}

QLineEdit {
  border: none;
  color: white;
  border-bottom: 2px solid #3cb0e5;
  padding: 3px 5px;
  background: transparent;
}

QLineEdit:disabled { border-color: #899399; }

QTextEdit {
  background: rgb(63,67,72);
  color: rgb(255,255,255);
}

QPlainTextEdit {
  background: rgb(63,67,72);
  color: rgb(255,255,255);
}

QCheckBox, QRadioButton {
  color: #e0e0e0;
}

QCheckBox:disabled, QRadioButton:disabled {
  color: gray;
}

QStatusBar {
  background-color: black;
}

QMenuBar {
  background: rgb(41,44,48);
  color: rgb(110,116,126);
}

QMenu {
  background: rgb(30,32,36);
  color: rgb(222,222,222);
}

QMenu::item:selected {
  background-color: rgb(48,140,198);
}

QToolButton {
  color: white;
  font-family: 'Montserrat';
  font-size: 10px;
  border: none;
  padding-top: 15px;
  padding-bottom: 15px;
}

QToolButton:checked {
  border: none;
  background-color: #111111;
}

QToolBar {
  background: black;
  border: none;
  padding: 0;
  margin: 0;
}

QToolTip { border: none; padding: 5px; border-radius: 3px; background-color: #3cb0e5; color: white; }

QDoubleSpinBox {
  color: white;
  background: transparent;
  border: none;
  height: 24px;
  border-bottom: 2px solid #3cb0e5;
  padding: 3px 5px;
  outline: none;
  padding-right: 20px;
}

QDoubleSpinBox::up-button {
  subcontrol-origin: margin;
  subcontrol-position: right top;
  border: none;
  padding-top: 4px;
  width: 12px;
  height: 12px;
}

QDoubleSpinBox::down-button {
  subcontrol-origin: margin;
  subcontrol-position: right bottom;
  border: none;
  padding-bottom: 4px;
  width: 12px;
  height: 12px;
}

QDoubleSpinBox::up-arrow {
  image: url(:/icons/material/white/arrow_up);
  width: 12px;
  height: 12px;
}

QComboBox, QValueComboBox {
  border: none;
  color: white;
  border-bottom: 2px solid #3cb0e5;
  padding: 3px 5px;
  height: 24px;
  outline: none;
  padding-right: 5px;
  text-align: right;
  combobox-popup: 0;
  background: #292c30;
}

QComboBox:on, QValueComboBox:on { /* shift the text when the popup opens */
  padding-top: 3px;
  padding-left: 4px;
  padding-right: 15px;
}

QComboBox::drop-down, QValueComboBox::drop-down {
  subcontrol-origin: margin;
  subcontrol-position: right center;
  border: none;
  background: transparent;
  width: 12px;
  height: 12px;
}

QComboBox QAbstractItemView, QValueComboBox QAbstractItemView {
  border: 1px solid black;
  background-color: #212121;
}

QComboBox QAbstractItemView::item, QValueComboBox QAbstractItemView::item {
  color: #e0e0e0;
}

QDoubleSpinBox::down-arrow, QComboBox::down-arrow, QValueComboBox::down-arrow {
  image: url(:/icons/material/white/arrow_down);
  width: 12px;
  height: 12px;
}

QComboBox::down-arrow:on, QValueComboBox::down-arrow:on {
  image: url(:/icons/material/white/arrow_up);
  width: 12px;
  height: 12px;
}

QListView {
  background-color: transparent;
}

QHeaderView::section {
  font-family: 'Montserrat';
  background: rgb(29,34,39);
  font-size: 10px;
  text-transform: uppercase;
  padding: 5px 20px;
  border: none;
  color: white;
}

QTreeWidget QHeaderView::section, QTreeView QHeaderView::section {
  padding: 5px 10px;
}

QHeaderView::down-arrow {
  image: url(:/icons/material/white/arrow_down);
  subcontrol-origin: margin;
  subcontrol-position: right center;
  width: 12px;
  height: 12px;
}

QHeaderView::up-arrow {
  image: url(:/icons/material/white/arrow_up);
  subcontrol-position: right center;
}

QTableView, QTreeWidget {
  background: rgb(66,71,78);
  alternate-background-color: rgb(76,81,88);
}

QTreeWidget::item, QTableView::item {
  border: 0;
  color: #e0e0e0;
  padding: 5px 15px;
  font-family: 'Open Sans';
  font-size: 12px;
}

QTableView::item:selected {
  background-color: #3cb0e5;
  color: white;
}

QTableView::item:selected, QTreeWidget::branch:selected, QTreeWidget::item:selected {
  background-color: #3cb0e5;
}

QTreeWidget::item {
  border: 0;
  padding: 2px 5px;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings {
  border-image: none;
  image: url(:/icons/material/white/arrow_right);
  width: 12px;
  height: 12px;
}

QTreeView::branch:selected:has-children:!has-siblings:closed,
QTreeView::branch:selected:closed:has-children:has-siblings {
  border-image: none;
  image: url(:/icons/material/white/arrow_right);
  width: 12px;
  height: 12px;
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings  {
  border-image: none;
  image: url(:/icons/material/white/arrow_down);
  width: 12px;
  height: 12px;
}

QTreeView::branch:selected:open:has-children:!has-siblings,
QTreeView::branch:selected:open:has-children:has-siblings  {
  border-image: none;
  image: url(:/icons/material/white/arrow_down);
  width: 12px;
  height: 12px;
}
